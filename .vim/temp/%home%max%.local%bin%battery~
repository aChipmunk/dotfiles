#!/bin/sh
# Lop through all attached batteries.
# Get its remaining capacity and charge status.
battery=/sys/class/power_supply/BAT0
capacity=$(cat "$battery"/capacity 2>/dev/null) || break
#status=$(sed "s/[Dd]ischarging/🔋/;s/[Nn]ot charging/🛑/;s/[Cc]harging/🔌/;s/[Uu]nknown/♻️/;s/[Ff]ull/⚡/" "$battery"/status)
status=$(cat "$battery"/status 2>/dev/null) || break
if [ "$status" == "Discharging" ]; then 
        if [ "$capacity" -ge 85 ]; then
                status=""

        elif [ "$capacity" -ge 55 ]; then
                status=""
        elif [ "$capacity" -ge 35 ]; then
                status=""

        elif [ "$capacity" -ge 15 ]; then
                status=""
        else
                status=""
        fi
else
        status=""
fi


printf "%s %s%% " "$status" "$capacity"
